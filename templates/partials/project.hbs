<li class="clearfix project hide" data-project-id={{id}}>
	<div class="row">
		<div class="col-sm-3 project-metadata">
			<p class="project-title">{{title}}</p>
			<p class="project-description">{{description}}</p>
			<p>
				{{#if roles}}
					<strong>Roles</strong>
					{{#each roles}}
						<span class="role-slot">{{this}}</span>
					{{/each}}
				{{/if}}
			<p>
			<p>
				{{#if technologies}}
					<strong>Technologies</strong>
					{{#each technologies}}
						<span class="technology-slot">{{this}}</span>
					{{/each}}
				{{/if}}
			<p>
		</div>

		<div class="col-sm-9 project-images">
			{{#each images}}
				<img src="{{url}}" />
			{{/each}}
		</div>
	</div>
</li>
